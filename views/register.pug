extends layout

block content
	div.row
		form.col.s12
			div.row
				div.input-field.col.s6
					input.validate(id='first-name', type='text')
					label(for='first-name') First Name
				div.input-field.col.s6
					input.validate(id='last-name', type='text')
					label(for='last-name') Last Name
			div.row
				div.input-field.col.s12
					input.validate(id='email', type='email')
					label(for='email') Email
			div.row
				div.input-field.col.s12
					input.validate(id='password', type='password')
					label(for='password') Password
			div.row
				div.input-field.col.s12
					input.validate(id='password-confirmation', type='password')
					label(for='password-confirmation') Password Confirmation